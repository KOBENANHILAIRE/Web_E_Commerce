{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="container security-form">
        <div class="login-form">

                        
            <h1>INSCRIPTION</h1>

            {{ form_errors(registrationForm) }}
            
            {{ form_start(registrationForm) }}
                {{ form_widget(registrationForm.email,{'attr': {'class':'form form-control','placeholder':"kkh@gmail.com"} }) }}
                <br>
                {{ form_widget(registrationForm.firstName,{'attr': {'class':'form form-control','placeholder':"Nom"} }) }}
                <br>
                {{ form_widget(registrationForm.LastName ,{'attr': {'class':'form form-control','placeholder':"Prenom"} }) }}
                <br>
                {{ form_widget(registrationForm.plainPassword,{'attr': {'class':'form form-control','placeholder':"Mot de Passe"} }) }}
                    
                
                {{ form_row(registrationForm.agreeTerms) }}
            
                <button type="submit" class="btn btn-primary btn-block">Register</button>
            {{ form_end(registrationForm) }}
  
   
           
        </div>
       
    </div>

   
{% endblock %}
